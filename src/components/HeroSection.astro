---
interface Props {
  headline: string;
  subtext?: string[];
  buttonText?: string;
  buttonLink?: string;
  backgroundVideo?: string;
  backgroundImage?: string;
  variant?: 'home' | 'page-cover';
}

const {
  headline,
  subtext = [],
  buttonText,
  buttonLink,
  backgroundVideo,
  backgroundImage = '/images/canva-final/home-hero-bg.jpg',
  variant = 'home',
} = Astro.props;

const isPageCover = variant === 'page-cover';
---

<section class={`hero ${isPageCover ? 'hero--page-cover' : 'hero--home'}`}>
  <!-- Background -->
  <div class="hero__background">
    {backgroundVideo ? (
      <video
        autoplay
        muted
        loop
        playsinline
        class="hero__video"
      >
        <source src={backgroundVideo} type="video/mp4" />
      </video>
    ) : (
      <img
        src={backgroundImage}
        alt=""
        class="hero__image"
        loading="eager"
        fetchpriority="high"
        decoding="async"
      />
    )}
    <div class="hero__overlay"></div>
  </div>

  <!-- Content -->
  <div class="hero__content">
    <h1 class="heading-xl hero__headline">{headline}</h1>
    {subtext.length > 0 && (
      <div class="hero__subtext">
        {subtext.map((paragraph) => (
          <p>{paragraph}</p>
        ))}
      </div>
    )}
    {buttonText && buttonLink && (
      <a href={buttonLink} class="btn-primary hero__button">
        {buttonText}
      </a>
    )}
  </div>
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    overflow: hidden;
  }

  .hero--home {
    min-height: 100vh;
    align-items: center;
    justify-content: flex-start;
  }

  .hero--page-cover {
    height: 50vh;
    align-items: flex-end;
    justify-content: flex-end;
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
  }

  .hero__video,
  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    text-align: left;
    padding: 120px 48px 80px;
    max-width: 800px;
  }

  .hero--home .hero__content {
    margin-left: 48px;
  }

  .hero--page-cover .hero__content {
    text-align: right;
    margin-left: auto;
    margin-right: 48px;
    padding: 48px;
  }

  .hero__headline {
    color: white;
    margin: 0 0 24px 0;
  }

  .hero--page-cover .hero__headline {
    margin: 0;
  }

  .hero__subtext {
    margin-bottom: 32px;
    max-width: 600px;
  }

  .hero__subtext p {
    font-family: var(--font-body);
    font-size: 15px;
    font-weight: 400;
    font-style: normal;
    color: white;
    line-height: 1.6;
    margin: 0 0 16px;
  }

  .hero__subtext p:first-child {
    font-weight: 500;
    font-size: 16px;
    margin-bottom: 12px;
  }

  .hero__subtext p:last-child {
    margin-bottom: 0;
  }

  .hero__button {
    min-width: 225px;
    min-height: 55px;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .hero--home .hero__content {
      margin-left: 32px;
      padding: 100px 32px 60px;
    }

    .hero--page-cover .hero__content {
      margin-right: 32px;
      padding: 32px;
    }

    .hero__subtext p {
      font-size: 14px;
    }

    .hero__subtext p:first-child {
      font-size: 15px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero--home {
      justify-content: center;
    }

    .hero--page-cover {
      height: 40vh;
      align-items: center;
      justify-content: center;
    }

    .hero__content {
      padding: 100px 20px 60px;
      margin-left: 0;
      margin-right: 0;
      text-align: center;
    }

    .hero--page-cover .hero__content {
      padding: 32px 20px;
    }

    .hero__subtext {
      max-width: 100%;
    }

    .hero__subtext p {
      font-size: 14px;
    }

    .hero__subtext p:first-child {
      font-size: 14px;
    }

    .hero__button {
      width: 100%;
      max-width: 280px;
    }
  }
</style>
