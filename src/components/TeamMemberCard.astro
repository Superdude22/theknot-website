---
interface Props {
  name: string;
  title: string;
  image?: string;
  filterType: 'blue-black' | 'grayscale';
}

const { name, title, image, filterType } = Astro.props;
---

<div class="team-card">
  <div class={`team-image ${filterType}`}>
    {image ? (
      <img
        src={image}
        alt={name}
        class="team-photo"
        loading="lazy"
      />
    ) : (
      <svg
        width="100%"
        height="100%"
        viewBox="0 0 200 280"
        preserveAspectRatio="xMidYMax slice"
        xmlns="http://www.w3.org/2000/svg"
      >
        <defs>
          <linearGradient id="teamSkyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" stop-color="#D6EEF5" />
            <stop offset="100%" stop-color="#E8F6FA" />
          </linearGradient>
        </defs>
        <rect width="200" height="280" fill="url(#teamSkyGradient)"/>
        <g fill="#FFFFFF">
          <ellipse cx="100" cy="100" rx="35" ry="22"/>
          <ellipse cx="130" cy="95" rx="25" ry="18"/>
          <ellipse cx="75" cy="105" rx="22" ry="15"/>
        </g>
        <path d="M0 200 Q50 170 100 190 Q150 210 200 180 L200 280 L0 280 Z" fill="#C5D86D"/>
        <path d="M0 230 Q60 200 120 220 Q180 240 200 210 L200 280 L0 280 Z" fill="#8FB339"/>
        <path d="M0 260 Q80 240 160 255 Q200 265 200 250 L200 280 L0 280 Z" fill="#5C8A2B"/>
      </svg>
    )}
  </div>
  <div class="team-info">
    <h3 class="team-name">{name}</h3>
    <p class="team-title">{title}</p>
  </div>
</div>

<style>
  .team-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 180px;
  }

  .team-image {
    width: 180px;
    height: 250px;
    border-radius: 12px;
    overflow: hidden;
    background-color: #D6EEF5;
  }

  .team-image.blue-black .team-photo {
    filter: grayscale(100%) sepia(100%) hue-rotate(180deg) saturate(200%);
  }

  .team-image.grayscale .team-photo {
    filter: grayscale(100%);
  }

  .team-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .team-info {
    padding: 16px 8px;
    width: 100%;
  }

  .team-name {
    font-family: var(--font-heading, 'Uniform Pro', sans-serif);
    font-size: 14px;
    font-weight: 700;
    color: #000;
    margin: 0 0 4px 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .team-title {
    font-family: var(--font-body, 'Rubik', sans-serif);
    font-size: 12px;
    color: #000;
    margin: 0;
  }
</style>
