---
interface Props {
  currentCapacity?: number;
  maxCapacity?: number;
}

const { currentCapacity = 65, maxCapacity = 100 } = Astro.props;
const capacityPercent = Math.round((currentCapacity / maxCapacity) * 100);
---

<footer class="footer">
  <div class="footer__divider"></div>

  <div class="footer__content">
    <!-- Left Column - Stay Connected -->
    <div class="footer__column footer__column--left">
      <h3 class="footer__heading">Stay Connected</h3>
      <div class="footer__social">
        <a
          href="https://instagram.com/climbtheknot"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="footer__social-link"
        >
          <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
        <a
          href="https://facebook.com/climbtheknot"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
          class="footer__social-link"
        >
          <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Center Column - Gym Capacity -->
    <div class="footer__column footer__column--center">
      <h3 class="footer__heading">Gym Capacity</h3>
      <div class="footer__capacity">
        <span class="footer__capacity-text">{currentCapacity}/{maxCapacity}</span>
        <div class="footer__capacity-bar">
          <div class="footer__capacity-fill" style={`width: ${capacityPercent}%`}></div>
        </div>
      </div>
    </div>

    <!-- Right Column - Contact Us -->
    <div class="footer__column footer__column--right">
      <h3 class="footer__heading">Contact Us</h3>
      <a href="tel:+13523222402" class="footer__contact-link">(352) 322-2402</a>
      <a href="mailto:info@climbtheknot.com" class="footer__contact-link">info@climbtheknot.com</a>
      <a
        href="https://maps.google.com/?q=704+S+Main+St,+Gainesville,+FL"
        target="_blank"
        rel="noopener noreferrer"
        class="footer__contact-link"
      >
        704 S Main St, Gainesville, FL
      </a>
    </div>
  </div>

  <!-- Bottom Row - Logo and Hours -->
  <div class="footer__bottom">
    <div class="footer__logo">THE KNOT</div>
    <div class="footer__hours">
      <div class="footer__hours-label">Hours</div>
      <div class="footer__hours-times">
        <span>Mon-Fri: 6am-10pm</span>
        <span>Sat-Sun: 9am-8pm</span>
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="footer__copyright">
    2025, The Knot - Climbing Gym
  </div>
</footer>

<style>
  .footer {
    background-color: black;
    padding: 48px 32px 24px;
  }

  .footer__divider {
    height: 1px;
    background-color: var(--color-sand);
    margin-bottom: 48px;
    opacity: 0.3;
  }

  .footer__content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    max-width: 1200px;
    margin: 0 auto;
    gap: 32px;
  }

  .footer__heading {
    font-family: var(--font-heading);
    font-size: 14px;
    font-weight: 600;
    color: var(--color-sand);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 16px 0;
  }

  .footer__column--left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .footer__social {
    display: flex;
    gap: 16px;
  }

  .footer__social-link {
    color: white;
    transition: opacity 0.3s ease;
  }

  .footer__social-link:hover {
    opacity: 0.7;
  }

  .footer__column--center {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer__capacity {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    width: 220px;
  }

  .footer__capacity-text {
    font-family: var(--font-heading);
    color: var(--color-manatee);
    font-size: 18px;
    font-weight: 500;
  }

  .footer__capacity-bar {
    width: 100%;
    height: 24px;
    background-color: white;
    border: 2px solid black;
    border-radius: 12px;
    overflow: hidden;
  }

  .footer__capacity-fill {
    height: 100%;
    background-color: var(--color-rust);
    border-radius: 10px;
    transition: width 0.5s ease;
  }

  .footer__column--right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 4px;
  }

  .footer__contact-link {
    font-family: var(--font-body);
    color: var(--color-coral);
    font-size: 16px;
    text-decoration: none;
    line-height: 1.5;
    transition: opacity 0.3s ease;
  }

  .footer__contact-link:hover {
    opacity: 0.8;
  }

  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    max-width: 1200px;
    margin: 48px auto 0;
    padding-top: 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__logo {
    font-family: var(--font-heading);
    font-size: 32px;
    font-weight: 700;
    color: white;
    letter-spacing: 2px;
  }

  .footer__hours {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 8px;
  }

  .footer__hours-label {
    font-family: var(--font-heading);
    font-size: 14px;
    font-weight: 600;
    color: var(--color-sand);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer__hours-times {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 4px;
    font-family: var(--font-body);
    font-size: 14px;
    color: white;
  }

  .footer__copyright {
    text-align: center;
    color: #757575;
    font-size: 14px;
    margin-top: 32px;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .footer {
      padding: 32px 20px 20px;
    }

    .footer__content {
      flex-direction: column;
      align-items: center;
      gap: 32px;
    }

    .footer__column--left,
    .footer__column--right {
      align-items: center;
    }

    .footer__heading {
      text-align: center;
    }

    .footer__column--center {
      order: -2;
    }

    .footer__column--right {
      order: -1;
    }

    .footer__column--left {
      order: 0;
    }

    .footer__capacity {
      width: 200px;
    }

    .footer__bottom {
      flex-direction: column;
      align-items: center;
      gap: 24px;
    }

    .footer__hours {
      align-items: center;
    }

    .footer__hours-times {
      align-items: center;
    }
  }
</style>
