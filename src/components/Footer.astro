---
import fs from 'node:fs';
import path from 'node:path';

interface Props {
  currentCapacity?: number;
}

// Load business info from Keystatic singleton
let businessInfo = {
  contact: { phone: '(352) 322-2402', phoneRaw: '3523222402', email: 'info@climbtheknot.com', eventsEmail: 'events@climbtheknot.com' },
  address: { street: '704 S Main St', city: 'Gainesville', state: 'FL', zip: '32601' },
  hours: [
    { days: 'Sunday', hours: '7AM - 10PM' },
    { days: 'Monday - Thursday', hours: '7AM - 11PM' },
    { days: 'Friday - Saturday', hours: '7AM - 10PM' },
  ],
  social: { instagramUrl: 'https://www.instagram.com/climbtheknot', facebookUrl: 'https://www.facebook.com/climbtheknot' },
  portal: { baseUrl: 'https://portal.climbtheknot.com' },
  gym: { capacityMax: 100, copyrightEntity: 'The Knot - Climbing Gym' },
};

try {
  const biPath = path.join(process.cwd(), 'src/content/business-info.json');
  const raw = fs.readFileSync(biPath, 'utf-8');
  const parsed = JSON.parse(raw);
  businessInfo = { ...businessInfo, ...parsed };
} catch (e) {
  // Use defaults
}

const { currentCapacity = 65 } = Astro.props;
const maxCapacity = businessInfo.gym.capacityMax;
const capacityPercent = Math.max(0, Math.min(100, Math.round((currentCapacity / maxCapacity) * 100)));
const addressQuery = encodeURIComponent(`${businessInfo.address.street}, ${businessInfo.address.city}, ${businessInfo.address.state}`);
---

<footer class="footer">
  <div class="footer__content">
    <div class="footer__column footer__column--left">
      <h3 class="footer__heading">Stay Connected</h3>
      <p class="footer__copy">
        Follow us on social media to stay up to date
        <br />
        on the latest gym news & events!
      </p>
      <div class="footer__social">
        <a
          href={businessInfo.social.instagramUrl}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="footer__social-link"
        >
          <svg width="56" height="56" viewBox="0 0 24 24" aria-hidden="true">
            <defs>
              <linearGradient id="footerIgGradient" x1="0%" y1="100%" x2="100%" y2="0%">
                <stop offset="0%" stop-color="#feda75" />
                <stop offset="35%" stop-color="#fa7e1e" />
                <stop offset="65%" stop-color="#d62976" />
                <stop offset="100%" stop-color="#4f5bd5" />
              </linearGradient>
            </defs>
            <path
              fill="url(#footerIgGradient)"
              d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
            />
          </svg>
        </a>
        <a
          href={businessInfo.social.facebookUrl}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
          class="footer__social-link"
        >
          <svg width="56" height="56" viewBox="0 0 24 24" fill="#ffffff" aria-hidden="true">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>
      <img
        src="/images/canva-final/logo.png"
        alt="The Knot Climbing Gym"
        width="500"
        height="500"
        class="footer__logo"
        loading="lazy"
        decoding="async"
      />
    </div>

    <div class="footer__column footer__column--center">
      <h3 class="footer__heading">Gym Capacity</h3>
      <p class="footer__capacity-number">{currentCapacity} / {maxCapacity}</p>
      <div class="footer__capacity-track" role="progressbar" aria-valuenow={capacityPercent} aria-valuemin="0" aria-valuemax="100" aria-label={`${capacityPercent}% capacity`}>
        <div class="footer__capacity-fill" style={`width: ${capacityPercent}%`}></div>
      </div>
    </div>

    <div class="footer__column footer__column--right">
      <h3 class="footer__heading">Contact Us</h3>
      <div class="footer__contact-rows">
        <div class="footer__contact-row">
          <span class="footer__contact-label">Phone Number</span>
          <a href={`tel:+1${businessInfo.contact.phoneRaw}`} class="footer__contact-value">{businessInfo.contact.phone}</a>
        </div>
        <div class="footer__contact-row">
          <span class="footer__contact-label">Email</span>
          <a href={`mailto:${businessInfo.contact.email}`} class="footer__contact-value">{businessInfo.contact.email}</a>
        </div>
        <div class="footer__contact-row">
          <span class="footer__contact-label">Address</span>
          <a
            href={`https://maps.google.com/?q=${addressQuery}`}
            target="_blank"
            rel="noopener noreferrer"
            class="footer__contact-value"
          >
            {businessInfo.address.street}, {businessInfo.address.city}, {businessInfo.address.state}
          </a>
        </div>
      </div>

      <h3 class="footer__heading footer__hours-heading">Hours</h3>
      <div class="footer__hours">
        {businessInfo.hours.map((h: { days: string; hours: string }) => (
          <span>{h.days} {h.hours}</span>
        ))}
      </div>
    </div>
  </div>

  <p class="footer__copyright"><span id="footer-year"></span>, {businessInfo.gym.copyrightEntity}</p>
</footer>

<style>
  .footer {
    background: #000;
    padding: 24px 48px 36px;
  }

  .footer__content {
    max-width: 1260px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 40px;
    align-items: start;
  }

  .footer__column {
    color: #fff;
  }

  .footer__heading {
    margin: 0 0 12px;
    color: #fff;
    font-family: var(--font-heading);
    font-size: 40px;
    font-weight: 900;
    line-height: 1;
    letter-spacing: -0.01em;
    text-transform: uppercase;
  }

  .footer__copy {
    margin: 0 0 14px;
    color: #fff;
    font-family: var(--font-body);
    font-size: 18px;
    line-height: 1.45;
  }

  .footer__social {
    display: flex;
    align-items: center;
    gap: 18px;
    margin-bottom: 18px;
  }

  .footer__social-link {
    line-height: 0;
    transition: opacity 0.2s ease;
  }

  .footer__social-link:hover {
    opacity: 0.85;
  }

  .footer__logo {
    display: block;
    width: 220px;
    height: auto;
  }

  .footer__column--center {
    text-align: center;
    justify-self: center;
    min-width: 320px;
  }

  .footer__capacity-number {
    margin: 8px 0 16px;
    color: #84BABF;
    font-family: var(--font-body);
    font-size: 42px;
    font-weight: 500;
    line-height: 1.2;
  }

  .footer__capacity-track {
    width: 100%;
    max-width: 460px;
    height: 56px;
    border-radius: 30px;
    background: #fff;
    border: 3px solid #fff;
    overflow: hidden;
  }

  .footer__capacity-fill {
    height: 100%;
    border-radius: 24px;
    background: #B94237;
  }

  .footer__column--right {
    text-align: right;
  }

  .footer__contact-rows {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer__contact-row {
    display: flex;
    justify-content: flex-end;
    gap: 16px;
    align-items: baseline;
  }

  .footer__contact-label {
    color: #fff;
    font-family: var(--font-body);
    font-size: 18px;
    line-height: 1.4;
  }

  .footer__contact-value {
    color: #B94237;
    font-family: var(--font-body);
    font-size: 18px;
    line-height: 1.4;
    text-decoration: none;
  }

  .footer__contact-value:hover {
    text-decoration: underline;
  }

  .footer__hours-heading {
    margin-top: 48px;
  }

  .footer__hours {
    display: flex;
    flex-direction: column;
    gap: 6px;
    color: #fff;
    font-family: var(--font-body);
    font-size: 18px;
    line-height: 1.4;
  }

  .footer__copyright {
    margin: 34px 0 0;
    text-align: center;
    color: #8d8d8d;
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.4;
  }

  @media (max-width: 1024px) {
    .footer {
      padding: 24px 32px 32px;
    }

    .footer__content {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .footer__heading {
      font-size: 30px;
    }

    .footer__copy,
    .footer__capacity-number,
    .footer__contact-label,
    .footer__contact-value,
    .footer__hours {
      font-size: 16px;
    }

    .footer__column--center {
      min-width: 0;
      justify-self: stretch;
    }

    .footer__capacity-track {
      max-width: 100%;
      height: 46px;
    }

    .footer__column--right {
      text-align: left;
    }

    .footer__contact-row {
      justify-content: flex-start;
      flex-wrap: wrap;
      gap: 6px 12px;
    }

    .footer__hours-heading {
      margin-top: 28px;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 20px 20px 28px;
    }

    .footer__heading {
      font-size: 24px;
    }

    .footer__logo {
      width: 180px;
    }

    .footer__capacity-track {
      height: 40px;
    }

    .footer__copyright {
      margin-top: 24px;
      font-size: 14px;
    }
  }
</style>

<script is:inline>
  (() => {
    const yearElement = document.getElementById('footer-year');
    if (yearElement) {
      yearElement.textContent = new Date().getFullYear().toString();
    }
  })();
</script>
